<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mitohida.automationpm1.MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="@string/bt1"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:id="@+id/bt1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <android.support.v7.widget.AppCompatButton
    android:layout_width="300dp"
    android:layout_height="80dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="@string/bt2"
        android:id="@+id/bt2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt1"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="@string/bt3"
        android:id="@+id/bt3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt2"
        android:layout_marginTop="10dp" />
    <android.support.v7.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="@string/bt4"
        android:id="@+id/bt5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt3"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bt5"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:text="@string/cp"/>





</android.support.constraint.ConstraintLayout>
